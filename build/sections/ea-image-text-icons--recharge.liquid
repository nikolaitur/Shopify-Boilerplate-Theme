{% assign set = section.settings %}

<style>
  #shopify-section-{{ section.id }} {
    padding: {{ set.ptop }}px 0 {{ set.pbottom }}px;
    background-color: {{ set.sectionbg }};
  }

  #shopify-section-{{ section.id }} .title,
  #shopify-section-{{ section.id }} .subtitle p {
    color: {{ set.text_color }};
  }
</style>

{% if set.visible %}
  {% include 'ea-image-text-icons-parts--recharge', section: section %}

  <div class="section section--hiw promo">
    {% include 'section-bg-image' %}
    <div class="container promo__container">
      <div class="row">
        <div class="col-md-12">
          <img class="promo__img-top ta-center" src="{{ set.top_image | img_url: 'master' }}" alt="{{ set.alt }}">
        </div>
        {% if set.image_pos == 'left' %}
          <div class="col-md-7">
            {{ image }}
          </div>
          <div class="col-md-5">
            {{ content }}
          </div>
        {% else %}
          <div class="col-md-7 desktop--hide">
            {{ image }}
          </div>	
          <div class="col-md-5 new-bo">
            {{ content }}
          </div>
          <div class="col-md-7 small--hide">
            {{ image }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>  
{% endif %}

{% if set.show_wave_bottom %}
<div class="section-wave">
  {% if set.wave_bottom_color != 0 %}
    {% assign wave_color =  set.wave_bottom_color %} 
  {% else %} 
    {% assign wave_color =  'white' %} 
  {% endif %}

  {% include 'include-ea_wave_background', color: wave_color %}
</div>
{% endif %}

