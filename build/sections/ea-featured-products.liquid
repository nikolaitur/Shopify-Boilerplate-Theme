{% comment %} ATTENTION!!! This is compiled version of ea-featured-products.liquid and it is overriding automatically. You should use theme development tool and sources\sections\ea-featured-products.liquid file to code and save your changes. {% endcomment %}
{% if section.settings.visible %}
  {% render 'ea-featured-products-content', section: section %}
{% endif %}

{% schema %}

{
  "name": "Featured Products",
  "tag": "section",
  "class": "section featured-products",
  "settings": [
    {
      "type": "checkbox",
      "id": "visible",
      "label": "Show section",
      "default": true
    },


    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "ptop",
      "label": "Top spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom",
      "label": "Bottom spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "ptop_mob",
      "label": "Top spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom_mob",
      "label": "Bottom spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Expand full width",
      "default": false
    },


    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "sectionbg",
      "label": "Section background color",
      "default": "#ffffff"
    },


    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "richtext",
      "id": "pretitle",
      "label": "Pre-title"
    },
    {
      "id": "title",
      "type": "text",
      "label": "Title",
      "default": "Title"
    },


    {
      "type": "header",
      "content": "Products"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "type": "select",
      "id": "product_count",
      "label": "Number of products",
      "default": "4",
      "options": [
        {
          "value": "4",
          "label": "4"
        },
        {
          "value": "8",
          "label": "8"
        },
        {
          "value": "12",
          "label": "12"
        },
        {
          "value": "16",
          "label": "16"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "category": "Products"
    }
  ]
}

{% endschema %}