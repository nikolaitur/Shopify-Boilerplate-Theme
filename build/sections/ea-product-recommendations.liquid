{% comment %} ATTENTION!!! This is compiled version of ea-product-recommendations.liquid and it is overriding automatically. You should use theme development tool and sources\sections\ea-product-recommendations.liquid file to code and save your changes. {% endcomment %}{% assign set = section.settings %}

{% if section.settings.visible %}
  {% render 'ea-product-recommendations-content', section: section %}
{% endif %}

{% schema %}
  {
    "name": "Products recommendations",
    "tag": "section",
    "class": "product-recommendations-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "visible",
        "label": "Show section",
        "default": true
      },
  
  
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "ptop",
        "label": "Top spacing desktop",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
      {
        "type": "range",
        "id": "pbottom",
        "label": "Bottom spacing desktop",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
      {
        "type": "range",
        "id": "ptop_mob",
        "label": "Top spacing mobile",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
      {
        "type": "range",
        "id": "pbottom_mob",
        "label": "Bottom spacing mobile",
        "min": 0,
        "unit": "px",
        "max": 500,
        "step": 5,
        "default": 45
      },
  
  
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "color",
        "id": "sectionbg",
        "label": "Section background color",
        "default": "#ffffff"
      },
  
      
      {
        "type": "header",
        "content": "Text"
      },      
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "range",
        "id": "related_count",
        "label": "Number of related products",
        "default": 5,
        "min": 2,
        "max": 10,
        "step": 1
      }
    ]
    
  }
{% endschema %}