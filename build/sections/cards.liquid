{% if set.visible %}
  {% render 'cards-content', section: section %}
{% endif %}

{% schema %}

{
  "name": "Cards",
  "class": "section cards",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "visible",
      "label": "Show section",
      "default": true
    },


    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "ptop",
      "label": "Top spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom",
      "label": "Bottom spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "ptop_mob",
      "label": "Top spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom_mob",
      "label": "Bottom spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },


    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "sectionbg",
      "label": "Section background color",
      "default": "#ffffff"
    },


    {
      "type": "header",
      "content": "Text"
    },
    {
      "id": "pretitle",
      "type": "richtext",
      "label": "Pre-title"
    },
    {
      "id": "title",
      "type": "richtext",
      "label": "Title"
    },
    {
      "id": "subtitle",
      "type": "richtext",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },


        {
          "type": "header",
          "content": "Additional info"
        },
        {
          "type": "richtext",
          "id": "info_text",
          "label": "Info Text"
        },


        {
          "type": "header",
          "content": "Benefits"
        },
        {
          "type": "richtext",
          "id": "benefit_1",
          "label": "Benefit 1"
        },
        {
          "type": "richtext",
          "id": "benefit_2",
          "label": "Benefit 2"
        },
        {
          "type": "richtext",
          "id": "benefit_3",
          "label": "Benefit 3"
        },
        {
          "type": "richtext",
          "id": "benefit_4",
          "label": "Benefit 4"
        },


        {
          "type": "header",
          "content": "Button"
        },
        {
          "id": "btnu",
          "type": "url",
          "label": "Button Url"
        },
        {
          "id": "btn",
          "type": "text",
          "label": "Button text",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Cards Section",
      "category": "Promo",
      "blocks":[
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}

{% endschema %}