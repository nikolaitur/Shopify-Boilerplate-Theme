{% comment %} ATTENTION!!! This is compiled version of ea-reviews--bottoms-sweatpants.liquid and it is overriding automatically. You should use theme development tool and sources\sections\ea-reviews--bottoms-sweatpants.liquid file to code and save your changes. {% endcomment %}{% assign set = section.settings %}
{% if set.visible %}
  {% render 'section-styles', section: section %}
  {%- if set.bg_image != blank or set.fg_image != blank -%}
    <div class="banner">
      {%- if set.bg_image != blank -%}
        <div class="banner__img banner__bg" style="background-image: url({{ set.bg_image | img_url: '2000x' }}); height: 200px"></div>
      {%- endif -%}
      {%- if set.fg_image != blank -%}
        <div class="banner__img banner__fg" style="background-image: url({{ set.fg_image | img_url: '1000x' }})"></div>
      {%- endif -%}
    </div>   
  {%- endif -%}

  <div class="container">
    <div class="section__content">
<div id="looxReviews" data-product-id="{{product.id}}" class="loox-reviews-default">{{ product.metafields.loox.reviews }}</div>
    </div>
  </div>

{% endif %}

{% schema %}
{
  "name": "Reviews",
  "class": "reviews-section",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "visible",
      "label": "Show section",
      "default": true
    },


    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "ptop",
      "label": "Top spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom",
      "label": "Bottom spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "ptop_mob",
      "label": "Top spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom_mob",
      "label": "Bottom spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },


    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "sectionbg",
      "label": "Section background color",
      "default": "#ffffff"
    },

    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "image_picker",
      "id": "fg_image",
      "label": "Foreground image"
    }


  ]
}

{% endschema %}