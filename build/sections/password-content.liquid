{% comment %} ATTENTION!!! This is compiled version of password-content.liquid and it is overriding automatically. You should use theme development tool and sources\sections\password-content.liquid file to code and save your changes. {% endcomment %}{% if section.settings.image != blank %}
  {%- assign password_image = section.settings.image | img_url: '1800x' -%}
{% else %}
  {%- assign password_image = 'password-page-background.jpg' | asset_url -%}
{% endif %}

{%- if section.settings.show_image -%}
  <div class="password-page__image" style="background-image: url({{ password_image }});"></div>
{%- endif -%}

<div class="password-page__content-wrapper">

  <div class="password-page__content">
    <div class="password-page__form">
      {% if section.settings.title != blank %}
        <h2 class="password-page__hero">{{ section.settings.title }}</h2>
      {% endif %}

      {%- if section.settings.show_password_message and shop.password_message != blank -%}
        <div class="rte rte--block">
          {{ shop.password_message }}
        </div>
      {%- endif -%}

      {% if section.settings.text != blank %}
        <div class="rte rte--block">{{ section.settings.text }}</div>
      {% endif %}

      {% if section.settings.newsletter_enable %}
        <div class="password-page__signup-form">
          {% include 'password-newsletter', section_id: section.id, snippet_context: 'password' %}
        </div>
      {% endif %}

      {% if section.settings.show_share_buttons %}
        <div class="password-page__social-sharing">
          {% include 'password-social' %}
        </div>
      {% endif %}
    </div>
    <div class="password-page__footer medium-up--text-right">
      
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Content",
    "class": "password-page__main",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Be the first to know"
      },
      {
        "type": "checkbox",
        "id": "show_password_message",
        "label": "Show password message",
        "default": false,
        "info": "Message set in your [online store preferences](/admin/online_store/preferences)"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "info": "[Tell your visitors about a launch day discount](https://www.shopify.com/blog/15514000-14-ways-to-use-offers-coupons-discounts-and-deals-to-drive-revenue-and-customer-loyalty)"
      },
      {
        "type": "header",
        "content": "Newsletter"
      },
      {
        "type": "checkbox",
        "id": "newsletter_enable",
        "label": "Show newsletter signup",
        "default": true
      },
      {
        "type": "text",
        "id": "newsletter_placeholder",
        "label": "Newsletter placeholder text",
        "default": "Enter your email"
      },
      {
        "type": "text",
        "id": "newsletter_button_text",
        "label": "Newsletter button text",
        "default": "Submit"
      },
      {
        "type": "header",
        "content": "Social sharing"
      },
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      },
      {
        "type": "header",
        "content": "Background image"
      },
      {
        "type": "checkbox",
        "id": "show_image",
        "label": "Enable image",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}
