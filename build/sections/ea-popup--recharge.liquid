{% comment %} ATTENTION!!! This is compiled version of ea-popup--recharge.liquid and it is overriding automatically. You should use theme development tool and sources\sections\ea-popup--recharge.liquid file to code and save your changes. {% endcomment %}{% assign set = section.settings %}

<div class="popup is-hidden" data-popup="membership">
  <div class="popup-window">
    <button class="close" data-popup-close><i class="icon-close2"></i></button>
    <div class="rte membership-popup">
      {%- if set.title != blank -%} <h4 class="title h3 not-animated">{{ set.title }}</h4> {%- endif -%}
      {%- if section.blocks.size -%}
        <ul class="membership-items">
          {%- for block in section.blocks -%}
            {%- assign bset = block.settings -%}
              <li>
                {%- if bset.title -%}<h5 class="title h5 not-animated">{{ bset.title }}</h5>{%- endif -%}
                {%- if bset.subtitle -%}<div class="subtitle h5 not-animated">{{ bset.subtitle }}</div>{%- endif -%}
              </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
      
    </div>
  </div>
  <div class="popup-bg" data-popup-close></div>
</div>

{% schema %}
{
  "name": "Membership info popup",
  "tag": "section",
  "class": "membership-popup-section",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Text item",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}