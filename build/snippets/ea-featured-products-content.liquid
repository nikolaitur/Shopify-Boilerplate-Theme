{% comment %} ATTENTION!!! This is compiled version of ea-featured-products-content.liquid and it is overriding automatically. You should use theme development tool and sources\snippets\ea-featured-products-content.liquid file to code and save your changes. {% endcomment %}{% assign set = section.settings %}

{% render 'ea-section-styles', section: section %}

{% render 'ea-section-foreground-image', section: section %}

<div class="container {% if set.full_width %}container-fluid{% endif %}">
  {% if set.pretitle != blank %}
    <h3 class="pretitle">{{ set.pretitle }}</h3>
  {% endif %}
  {% if set.title != blank %}
    <h2 class="title h2">{{ set.title }}</h2>
  {% endif %}
  <div class="products-grid">
    {% for product in collections[set.collection].products limit: set.product_count %}
      <div class="product-cell-wrap">
        {% render 'product-cell', product: product, showInfo: true, showDescr: true, showPrice: true, showBtn: false %}
      </div>
    {% endfor %}
  </div>
</div>
