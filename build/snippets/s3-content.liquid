{% comment %} ATTENTION!!! This is compiled version of s3-content.liquid and it is overriding automatically. You should use theme development tool and sources\snippets\s3-content.liquid file to code and save your changes. {% endcomment %}{% assign set = section.settings %}
<style>
  #shopify-section-{{ section.id }} {
    padding: {{ set.ptop }}px 0 {{ set.pbottom }}px;
    background-color: {{ set.sectionbg }};
  }
  @media (max-width: 989px) {
    #shopify-section-{{ section.id }} {
      padding: {{ set.ptop_mob }}px 0 {{ set.pbottom_mob }}px;
    }
  }
</style>

<div class="container">
  {% if set.pretitle != blank %}
    <h3 class="pretitle ta-center {% if type == 2 %}m-accent{% endif %} ">{{ set.pretitle }}</h3>
  {% endif %}
  {% if set.title != blank %}
    <h2 class="title ta-center">{{ set.title }}</h2>
  {% endif %}
  {% if set.subtitle != blank %}
    <div class="subtitle ta-center">{{ set.subtitle }}</div>
  {% endif %}
  <div class="section__content {% if type == 2 %}m-spacing-2{% endif %}">
    <div class="list-icons" data-hor-slider data-accordions-mobile-only="1" data-slides-to-show="3" data-infinite="false" data-custom-controls="1">
      {% for block in section.blocks %}
        {% assign bset = block.settings %}
        {% if bset.img != blank %}
          <div class="list-icons__item">
            {% render 'rimage', image: bset.img, size: '200x' %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="hide--desktop">
      <div class="slider-controls">
        <button class="slider-arrow slider-prev m-icon" data-hor-slider-prev><i class="icon-left-arrow"></i></button>
        <div class="slider-dots" data-hor-slider-dots></div>
        <button class="slider-arrow slider-next m-icon" data-hor-slider-next><i class="icon-right-arrow"></i></button>
      </div>
    </div>
  </div>
</div>
