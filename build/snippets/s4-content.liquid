{% comment %} ATTENTION!!! This is compiled version of s4-content.liquid and it is overriding automatically. You should use theme development tool and sources\snippets\s4-content.liquid file to code and save your changes. {% endcomment %}{% assign set = section.settings %}
<style>
  #shopify-section-{{ section.id }} {
    padding: {{ set.ptop }}px 0 {{ set.pbottom }}px;
  }
  #shopify-section-{{ section.id }} .s4__text {
    background-color: {{ set.sectionbg }};
  }
  @media (max-width: 989px) {
    #shopify-section-{{ section.id }} {
      padding: {{ set.ptop_mob }}px 0 {{ set.pbottom_mob }}px;
    }
  }
</style>

<div class="container no-padding-mobile">
  <div class="s4__content m-image-pos-{{ set.image_pos }}">
    {% if set.image != blank %}
      <div class="s4__image">{% render 'rimage', image: set.image, size: '500x' %}</div>
    {% endif %}
    <div class="s4__text ta-{{ set.text_align }}">
      {% if set.pretitle != blank %}
        <h3 class="pretitle {% unless type == 2 %}m-accent{% endunless %} ">{{ set.pretitle }}</h3>
      {% endif %}
      {% if set.title != blank %}
        <h2 class="title {% unless type == 2 %}m-black{% endunless %} ">{{ set.title }}</h2>
      {% endif %}
      {% if set.subtitle != blank %}
        <div class="subtitle">{{ set.subtitle }}</div>
      {% endif %}
      {% render 'button', {
        top: set.btntop,
        id: section.id,
        text: set.btn,
        url: set.btnu,
        class: 'm-underline'
      } %}
    </div>
  </div>
</div>
