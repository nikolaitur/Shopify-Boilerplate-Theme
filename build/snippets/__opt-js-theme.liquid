var view_mode = false;
var md = new MobileDetect(window.navigator.userAgent);

if(md.mobile())
{
	view_mode = 'mobile';
}
else
{
	view_mode = 'desktop';
}

if(md.tablet())
{
	view_mode = 'desktop';
}

