{
	setTimeout(function(){
		document.dispatchEvent(new CustomEvent('EndNprogress'));
		$("#__loader").remove();
		$("#__preloader").fadeTo( "fast", 1 );
	}, 450);

	if(view_mode == 'mobile')
	{
		setTimeout(function(){
