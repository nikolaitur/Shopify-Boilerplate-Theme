  {% section 'ea-topbar' %}

  <section class="site-header {{ class }}" id="site-header">
    <div class="container">
      <button class="btn site-header__toggle hide--desktop" data-open-menu><i class="icon-menu"></i> Menu</button>
      <div class="site-header__logo">
        <a href="/">
          {% if settings.svglogo != blank %}
            {{ settings.svglogo }}
          {% elsif settings.logo != blank %}
            <img src="{{ settings.logo | img_url: '200x' }}" alt="{{ settings.logo.alt }}">
          {% else %}
            {{ shop.name }}
          {% endif %}
        </a>
      </div>

      <div class="site-header__nav hide--mobile">{% section 'ea-megamenu' %}</div>

      <nav class="nav site-header__tools">
        <ul class="nav__items">
          <li class="nav__item"><a class="search"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><g id="search"><path d="M92.83,90.18,71.47,68.83a38.58,38.58,0,1,0-6.29,5l22,22ZM14,41.46A30.47,30.47,0,1,1,44.47,71.93,30.51,30.51,0,0,1,14,41.46Z"/></g></svg></a></li>
          <li class="nav__item hide--mobile">
            {% if customer.id %}
              <a class="nav__link m-level-1 m-login" href="/account">My Account</a>
            {% else %}
              <a class="nav__link m-level-1 m-login" href="/account">Sign In</a>
            {% endif %}
          </li>
          <li class="nav__item hide--mobile">
            <a class="nav__link m-level-1 m-icon m-search" href="/search" data-trigger><i class="icon-search"></i></a>
            <nav class="nav-dropdown m-wide" data-dropdown-parent>
              <div class="container">
                <form action="/search" class="search-form" method="get" role="search">
                  <input type="search" class="input" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}">
                  <input type="hidden" name="type" value="product">
                </form>
              </div>
            </nav>
          </li>
          <li class="nav__item">
            <a class="nav__link m-level-1 m-icon m-cart" href="/cart" data-minicart-toggle>
              <i class="icon-cart"></i>
              <span class="cart-count" data-cart-count>{{ cart.item_count }}</span>
            </a>
          </li>
        </ul>
      </nav> <!-- /.site-header__tools -->
    </div> <!-- /.container -->
     <div class="search-container hide">
        {% render 'search-overlay' %}
      </div>
  </section> <!-- /.site-header -->
</header> <!-- /.site-header-container -->

