{% render 'ea-section-styles', set: set, section: section %}

<div class="container">
  {% if set.pretitle != blank %}
    <h3 class="pretitle ta-center">{{ set.pretitle }}</h3>
  {% endif %}
  {% if set.title != blank %}
    <h2 class="title ta-center">{{ set.title }}</h2>
  {% endif %}
  {% if set.subtitle != blank %}
    <div class="subtitle ta-center">{{ set.subtitle }}</div>
  {% endif %}

  <div class="section__content">
    <div class="cards-grid">
      {% for block in section.blocks %}
        <div class="card m-col-2">
          {% assign bset = block.settings %}
          <div class="card__inner">
            <a href="{{ bset.url }}" class="card__image no-hover-link">
              {% render 'rimage', image: bset.image, size: '370x' %}
            </a>
            <div class="card__content ta-center">
              {% if bset.pretitle != blank %}
                <h4 class="pretitle m-accent">{{ bset.pretitle }}</h4>
              {% endif %}
              {% if bset.title != blank %}
                <h3 class="title h3 not-animated m-black">{{ bset.title }}</h3>
              {% endif %}
              {% if bset.subtitle != blank %}
                <div class="subtitle">{{ bset.subtitle }}</div>
              {% endif %}
            </div> <!-- /.card__content -->
          </div> <!-- /.card__inner -->
        </div> <!-- /.card -->
      {% endfor %}
    </div>
  </div>
</div>
