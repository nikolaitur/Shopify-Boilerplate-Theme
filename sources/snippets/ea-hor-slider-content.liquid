<style>
  #shopify-section-{{ section.id }} {
    padding: {{ set.ptop }}px 0 {{ set.pbottom }}px;
    background-color: {{ set.sectionbg }};
  }
  @media (max-width: 989px) {
    #shopify-section-{{ section.id }} {
      padding: {{ set.ptop_mob }}px 0 {{ set.pbottom_mob }}px;
    }
  }
</style>

<div class="section m-hor-slider">
  {% include 'ea-section-foreground-image' %}
  <div class="container">
    {% if set.title != blank %}
      <h3 class="title ta-center">{{ set.title }}</h3>
    {% endif %}
    <div class="section__content" style="padding-top: 0">
      <div class="slider-controls">
        <div class="slider-dots m-hor" data-hor-slider-dots></div>
      </div> <!-- / .slider-controls -->
      <div class="slider m-hor" data-hor-slider data-slides-to-show="1" data-custom-controls="1" data-dots-titles="1">
        {% for block in section.blocks %}
          {% assign bset = block.settings %}
          <div class="slide" data-title="{{ bset.bullet_title }}">
            <div class="slide__panel">
              {% if bset.title != blank %}<h3 class="title">{{ bset.title }}</h3>{% endif %}
              {% if bset.text != blank %}<div class="subtitle">{{ bset.text }}</div>{% endif %}
              <div class="buttons">
                {% if bset.btn != '' %}<a href="{{ bset.btnu }}" class="btn m-outline">{{ bset.btn }}</a>{% endif %}
                {% if bset.btn2 != '' %}<a href="{{ bset.btnu2 }}" class="btn m-outline">{{ bset.btn2 }}</a>{% endif %}
              </div>
            </div>
            <img src="{{ bset.image | img_url: '1000x' }}" alt="" class="slide__image">
          </div> <!-- / .slide -->
        {% endfor %}
      </div> <!-- / .slider -->
    </div> <!-- / .section__content -->
  </div>
</div>