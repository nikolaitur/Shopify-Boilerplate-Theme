{% assign set = object.settings %}

{% case set.video_url.type %}
  {% when 'youtube' %}
  <div class="video-container video--youtube" data-youtube-id="{{ set.video_url.id }}">
    <iframe src="//www.youtube.com/embed/{{ set.video_url.id }}?vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
  </div>
  {% when 'vimeo' %}
    <div class="video-container" 
      data-vimeo-id="{{ set.video_url.id }}" 
      data-vimeo-controls="false" 
      data-vimeo-muted="true"  
      data-vimeo-responsive="true"  
      data-vimeo-autoplay="true"></div>
    <script>
      if (!window.Vimeo) {
        var s = document.createElement("script");
        s.type = "text/javascript";
        s.src = "https://player.vimeo.com/api/player.js";
        document.body.appendChild(s);
      }
    </script>
{% endcase %}